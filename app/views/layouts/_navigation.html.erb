      <%else %>
        <div class="col-sm">
          <%= link_to "Login".html_safe, "login", :class => "btn btn-primary", :style => "width:100%" %>
        </div>
        <div class="col-sm">
          <%= link_to "Register".html_safe, "signup", :class => "btn btn-primary", :style => "width:100%" %>
        </div>
      <%end %>
    </div>
  </nav>
